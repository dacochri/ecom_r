<section>
  <h2>Listing Order_items</h2>
  <p><%= link_to 'New Order item', new_order_item_path %></p>
  <table>
    <thead>
      <tr>
        <th scope="col">Order</th>
        <th scope="col">Product</th>
        <th scope="col">Quantity</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.order_id %></td>
          <td><%= order_item.product_id %></td>
          <td><%= order_item.quantity %></td>
          <td>
            <%= link_to 'Show', order_item %>
            <%= link_to 'Edit', edit_order_item_path(order_item) %>
            <%= link_to 'Destroy', order_item, method: :delete, data: { confirm: "Are you sure you want do delete order_item #{order_item.id}?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

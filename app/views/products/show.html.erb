<section>
  <h2>Show Product <%= @product.id %></h2>
  <% unless notice.blank? %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <dl>
    <dt>Category</dt> <dd><%= Category.find(@product.category_id).name %></dd>
    <dt>Name</dt> <dd><%= @product.name %></dd>
    <dt>Image</dt> <dd><%= @product.image %></dd>
    <dt>Price</dt> <dd>$<%= @product.price %></dd>
    <dt>Manufacturer</dt> <dd><%= @product.manufacturer %></dd>
    <dt>Quantity</dt> <dd><%= @product.quantity %></dd>
    <dt>Description</dt> <dd><%= @product.description %></dd>
  </dl>
  <p><%= link_to 'Edit', edit_product_path(@product) %> <%= link_to 'Back', products_path %></p>
</section>
